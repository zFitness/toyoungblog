<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.zheng.blog.dao.XzArticleSortDao">

    <resultMap type="pers.zheng.blog.entity.XzArticleSort" id="XzArticleSortMap">
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="sortId" column="sort_id" jdbcType="INTEGER"/>
        <result property="id" column="id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="XzArticleSortMap">
        select
          article_id, sort_id, id
        from blog.xz_article_sort
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="XzArticleSortMap">
        select
          article_id, sort_id, id
        from blog.xz_article_sort
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="XzArticleSortMap">
        select
        article_id, sort_id, id
        from blog.xz_article_sort
        <where>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
            <if test="sortId != null">
                and sort_id = #{sortId}
            </if>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_sort(article_id, sort_id)
        values (#{articleId}, #{sortId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_sort(article_id, sort_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.articleId}, #{entity.sortId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_sort(article_id, sort_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.articleId}, #{entity.sortId})
        </foreach>
        on duplicate key update
        article_id = values(article_id) , sort_id = values(sort_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.xz_article_sort
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="sortId != null">
                sort_id = #{sortId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.xz_article_sort where id = #{id}
    </delete>

</mapper>