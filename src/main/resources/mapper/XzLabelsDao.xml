<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.zheng.blog.dao.XzLabelsDao">

    <resultMap type="pers.zheng.blog.entity.XzLabels" id="XzLabelsMap">
        <result property="labelId" column="label_id" jdbcType="INTEGER"/>
        <result property="labelName" column="label_name" jdbcType="VARCHAR"/>
        <result property="labelDescription" column="label_description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="XzLabelsMap">
        select
          label_id, label_name, label_description
        from blog.xz_labels
        where label_id = #{labelId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="XzLabelsMap">
        select
          label_id, label_name, label_description
        from blog.xz_labels
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="XzLabelsMap">
        select
        label_id, label_name, label_description
        from blog.xz_labels
        <where>
            <if test="labelId != null">
                and label_id = #{labelId}
            </if>
            <if test="labelName != null and labelName != ''">
                and label_name = #{labelName}
            </if>
            <if test="labelDescription != null and labelDescription != ''">
                and label_description = #{labelDescription}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="labelId" useGeneratedKeys="true">
        insert into blog.xz_labels(label_name, label_description)
        values (#{labelName}, #{labelDescription})
    </insert>

    <insert id="insertBatch" keyProperty="labelId" useGeneratedKeys="true">
        insert into blog.xz_labels(label_name, label_description)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.labelName}, #{entity.labelDescription})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="labelId" useGeneratedKeys="true">
        insert into blog.xz_labels(label_name, label_description)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.labelName}, #{entity.labelDescription})
        </foreach>
        on duplicate key update
        label_name = values(label_name) , label_description = values(label_description)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.xz_labels
        <set>
            <if test="labelName != null and labelName != ''">
                label_name = #{labelName},
            </if>
            <if test="labelDescription != null and labelDescription != ''">
                label_description = #{labelDescription},
            </if>
        </set>
        where label_id = #{labelId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.xz_labels where label_id = #{labelId}
    </delete>

</mapper>