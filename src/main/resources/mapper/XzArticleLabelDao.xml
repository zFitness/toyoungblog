<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.zheng.blog.dao.XzArticleLabelDao">

    <resultMap type="pers.zheng.blog.entity.XzArticleLabel" id="XzArticleLabelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="labelId" column="label_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="XzArticleLabelMap">
        select
          id, article_id, label_id
        from blog.xz_article_label
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="XzArticleLabelMap">
        select
          id, article_id, label_id
        from blog.xz_article_label
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="XzArticleLabelMap">
        select
        id, article_id, label_id
        from blog.xz_article_label
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
            <if test="labelId != null">
                and label_id = #{labelId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_label(article_id, label_id)
        values (#{articleId}, #{labelId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_label(article_id, label_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.articleId}, #{entity.labelId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog.xz_article_label(article_id, label_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.articleId}, #{entity.labelId})
        </foreach>
        on duplicate key update
        article_id = values(article_id) , label_id = values(label_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.xz_article_label
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="labelId != null">
                label_id = #{labelId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.xz_article_label where id = #{id}
    </delete>

</mapper>